    <div id="map"></div>

    <!-- Inject API Key into JavaScript -->
    <script>
        const MAP_API_KEY = "<%= MAP_API_KEY %>";
    </script>
    
    <!-- Include the external script -->
    <script src="/js/mapScript.js"></script>
</body>
</html>
